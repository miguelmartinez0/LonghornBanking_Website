\@model Team15_FinalProject.Models.Transaction

@{
    ViewBag.Title = "EmployeeDetails";
}

<h2>Details</h2>

<h3>
    @ViewBag.Message
</h3>

<div>
    <h4>Transaction Details</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TransactionType)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TransactionType)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Amount)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Amount)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Date)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Date)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TransactionNumber)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TransactionNumber)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Comment)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Comment)
        </dd>
    </dl>
</div>

Dispute Comment: @ViewBag.DisputeComment

<table class="table">
    <tr>
        <th>
            Transaction Description
        </th>
        <th>
            Transaction Type
        </th>
        <th>
            Amount
        </th>
        <th>
            Date
        </th>
    </tr>

    @foreach (var item in ViewBag.transactions)
    {
        <tr>
            <td>
                @item.Description
            </td>
            <td>
                @item.TransactionType
            </td>
            <td>
                @item.Amount
            </td>
            <th>
                @item.Date
            </th>
        </tr>
    }

</table>

<p>
    @Html.ActionLink("Back to List", "EmployeeIndex")
</p>