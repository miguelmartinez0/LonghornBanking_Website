@model Team15_FinalProject.Models.Transaction

@{
    ViewBag.Title = "Deposit";
}

<h2>Deposit</h2>

@ViewBag.ErrorMessage

@using (Html.BeginForm())
{
        @Html.AntiForgeryToken()

    <div class="form-horizontal">
        Amount: @Html.TextBox("DesAmount", null, new { @class = "form-control" })<br />

        <div class="form-group">
            <label class="control-label col-md-2">Accounts</label>
            <div class="col-md-10">
                @Html.DropDownList("DesProductID", (SelectList)ViewBag.AllProducts, new { @class = "form-control" })
            </div>
        </div>

        Comment: @Html.TextBox("DesComment", null, new { @class = "form-control" })<br />

        <form>
            <div>
                <label for="desdate">Enter the transaction date:</label>
                <input type="date" id="desdate" name="desdate">
            </div>
        </form>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Submit" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to Deposit", "Index")
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>